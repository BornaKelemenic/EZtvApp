<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.diehardzg.eztvapp.SerijaDetailsActivity"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/serijaNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ime Serije"
            android:textSize="35sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/serijaAirTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Air time"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <TextView
            android:id="@+id/serijaOpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis serije"/>

        <TextView
            android:id="@+id/serijaPopis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="POPIS epizoda"/>

        <ProgressBar
            android:id="@+id/progresBAR"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="visible"/>

    </LinearLayout>


</ScrollView>
